<UserControl x:Class="TaskTimeline.View.TasksView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:TaskTimeline.View"
             xmlns:vm="clr-namespace:TaskTimeline.ViewModels;assembly=TaskTimeline.ViewModels"
             xmlns:vmUtils="clr-namespace:TaskTimeline.ViewModels.Utils;assembly=TaskTimeline.ViewModels"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <UserControl.ContentTemplate>
        <DataTemplate DataType="{x:Type vm:TasksViewModel}">
            <Grid Background="AliceBlue">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>
                <Label Grid.Row="0" Margin="10" Content="{Binding Path=Name, Mode=OneWay, UpdateSourceTrigger=PropertyChanged}" Background="AntiqueWhite"/>
                <ListBox Grid.Row="1" Margin="10" ItemsSource="{Binding Path=TaskItems, Mode=OneWay, UpdateSourceTrigger=PropertyChanged}">                    

                </ListBox>
            </Grid>            
        </DataTemplate>
    </UserControl.ContentTemplate>
</UserControl>
